@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Conference Delegate Management System</h1>
    <p>A comprehensive system for managing conference delegates, registrations, and check-ins.</p>
    <div class="mt-4">
        <a asp-action="Login" class="btn btn-primary">Login</a>
        <a asp-action="Register" class="btn btn-outline-primary ml-2">Register</a>
    </div>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Delegate Management</h5>
                <p class="card-text">Manage delegate information, registrations, and attendance.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Conference Management</h5>
                <p class="card-text">Create and manage conferences, sessions, and schedules.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Check-in System</h5>
                <p class="card-text">Efficient QR code-based check-in system for conferences.</p>
            </div>
        </div>
    </div>
</div>
